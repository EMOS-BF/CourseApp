<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcceuilActivity">
    <LinearLayout
        android:id="@+id/line1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/insert_data"
            android:text="INSERER"
            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View

            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/update_data"
            android:text="UPDATE"

            android:layout_weight="1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View

            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/delete_data"
            android:text="SUPPRIMER"

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/refresh_data"
            android:text="LISTE"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/line2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1">
    <TextView
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/data_list_count"
        android:text="LISTE DES UTILISATEURS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

        <TextView
            android:id="@+id/all_data_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/data_list_count"
            android:padding="10dp"
            />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
    </LinearLayout>

</RelativeLayout>